{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "basePath": "/api/v1",
  "paths": {
    "/sales": {
      "post": {
        "summary": "Creates a sale to a customer",
        "tags": [
          "CCPS"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "attributes": {
                  "type": "object",
                  "properties": {
                    "item": {
                      "type": "string"
                    },
                    "date_of_transaction": {
                      "type": "string"
                    },
                    "source": {
                      "type": "string"
                    },
                    "price": {
                      "type": "string"
                    }
                  }
                },
                "relationships": {
                  "type": "object",
                  "properties": {
                    "customer": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "customer_number": {
                              "type": "string",
                              "x-nulllable": true
                            },
                            "name": {
                              "type": "string",
                              "x-nulllable": true
                            },
                            "surname": {
                              "type": "string",
                              "x-nulllable": true
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "sales created"
          }
        }
      }
    }
  }
}